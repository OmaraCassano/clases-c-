--------------------------------------------------------------------------
ejemplo: archivos

#include <iostream>
#include <fstream>
using namespace std;
int main() {
  int x;
  fstream myfile("demo1.txt", ios::in);

  while (!myfile.fail()) {
    cout << x;
    myfile >> x;
  }

}
