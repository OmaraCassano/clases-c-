ejemplo de lab 09 archivos
escribe un programa que solicite un txto en forma de cadena 

#include <iostream>
#include <fstream>
using namespace std;
int main() {
  string s;
  fstream myfile("datos.txt", ios::out);
  cin >> s;
  while (s != ".") {
    myfile << s;
    cout << x << "\n";
    myfile >> x;
  }

}
-------------------------------------------------------------------
#include <iostream>
#include <fstream>
using namespace std;
int main() {
  string s;
  fstream myfile("datos.txt", ios::out);
  cout << "\ningrese la palabra:";
  cin >> s;
  while (s != ".") {
    myfile << s << "\n";
      cout << "\ningrese la palabra:";
    cin >> s;  
  }
  myfile.close();
}
